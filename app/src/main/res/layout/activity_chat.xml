<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_chat_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050708">

    <!-- Chat Title (will be set programmatically) -->
    <TextView
        android:id="@+id/chat_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="" 
        android:textColor="#00E5FF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Removed Placeholder text -->

    <!-- RecyclerView for messages -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/chat_title"
        app:layout_constraintBottom_toTopOf="@id/input_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Message input container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Message input -->
        <EditText
            android:id="@+id/chat_input"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:hint="@string/chat_hint"
            android:textColor="#FFFFFF"
            android:textColorHint="#78909C"
            android:background="@drawable/chat_input_bg"
            android:padding="12dp"
            android:inputType="text"
            android:autofillHints="none"
            android:imeOptions="actionSend"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/chat_send_button"/>

        <!-- Send button -->
        <ImageButton
            android:id="@+id/chat_send_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#00E5FF"
            android:src="@android:drawable/ic_menu_send"
            app:tint="#050708"
            android:contentDescription="@string/send_message"
            app:layout_constraintBottom_toBottomOf="@id/chat_input"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>