<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050708"
    android:padding="24dp"
    tools:context=".PostFoundItemActivity">

    <TextView
        android:id="@+id/post_found_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Post a Found Item"
        android:textColor="#00E5FF"
        android:textSize="28sp"
        android:letterSpacing="-0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:scrollbarThumbVertical="@null"
        app:layout_constraintBottom_toTopOf="@+id/button_post_item"
        app:layout_constraintTop_toBottomOf="@id/post_found_item_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="What did you find?"
                android:textColorHint="#546E7A"
                app:boxBackgroundColor="#121619"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusTopStart="16dp"
                app:boxStrokeColor="#00E5FF"
                app:hintTextColor="#00E5FF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:textColor="#FFFFFF" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Add more details..."
                android:textColorHint="#546E7A"
                app:boxBackgroundColor="#121619"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusTopStart="16dp"
                app:boxStrokeColor="#00E5FF"
                app:hintTextColor="#00E5FF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_item_description"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:textColor="#FFFFFF" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="#121619"
                app:cardCornerRadius="24dp"
                app:strokeColor="#1AFFFFFF"
                app:strokeWidth="1dp">

                <ImageView
                    android:id="@+id/image_view_item_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@android:drawable/ic_menu_camera"
                    app:tint="#546E7A" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_add_photo"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Add Photo"
                android:textColor="#00E5FF" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Where did you find it?"
                android:textColorHint="#546E7A"
                app:boxBackgroundColor="#121619"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusTopStart="16dp"
                app:boxStrokeColor="#00E5FF"
                app:hintTextColor="#00E5FF"
                app:startIconDrawable="@android:drawable/ic_menu_mylocation"
                app:startIconTint="#00E5FF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_item_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:textColor="#FFFFFF" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_post_item"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:backgroundTint="#00E5FF"
        android:text="Post Found Item"
        android:textAllCaps="false"
        android:textColor="#050708"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>